File Location: "/etc/nginx/sites-available/kuzco"
server {
    listen 80;
    server_name kuzco.robandmindy.com;

    # Root directory for Frontend (Static Files)
    root /home/kronk/workbench/kuzco/frontend;
    index index.html;

    # 1. Serve Static Files directly
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 2. Proxy API requests to FastAPI
    location /api {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 3. Allow access to Swagger UI (FastAPI Docs)
    location /docs {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
    }

    # 4. OpenAPI JSON (Required for Swagger UI)
    location /openapi.json {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
    }
}